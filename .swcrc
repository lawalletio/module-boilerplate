{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "target": "es2020",
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@lib/*": ["./src/lib/*"],
      "@nostr/*": ["./src/nostr/*"],
      "@rest/*": ["./src/rest/*"],
      "@services/*": ["./src/services/*"],
      "@type/*": ["src/type/*"]
    },
    "baseUrl": "."
  },
  "module": {
    "type": "commonjs"
  }
}
