{
  "name": "module-boilerplate",
  "version": "0.0.0",
  "description": "LaWallet Module Boilerplate",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "default": "./dist/index.js",
    "require": "./dist/index.mjs",
    "import": "./dist/index.js",
    "node": "./dist/index.mjs"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "concurrently \"pnpm run build:watch\" \"pnpm run dev:watch\"",
    "dev:watch": "nodemon --watch \"dist/**/*\" -w .env -r dotenv/config -e js ./dist/index.js",
    "build": "swc src -d dist --copy-files",
    "build:watch": "swc src -w --out-dir dist --copy-files",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rm -rf dist .coverage",
    "reset": "pnpm clean; rm -rf node_modules pnpm-lock.yaml; pnpm install",
    "lint": "eslint src tests --fix; prisma validate",
    "prettier": "prettier src tests --write; prisma format",
    "prisma:migrate": "prisma migrate dev"
  },
  "keywords": [],
  "author": "Agustin Kassis",
  "license": "MIT",
  "dependencies": {
    "@nostr-dev-kit/ndk": "^0.8.23",
    "@prisma/client": "5.5.2",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs": "0.0.1-security",
    "glob": "^10.3.10",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "websocket-polyfill": "^0.0.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/debug": "^4.1.10",
    "@types/express": "^4.17.20",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.15",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
